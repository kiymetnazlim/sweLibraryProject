@{
    ViewData["Title"] = "Reservation Management";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .header {
            background-color: #ff8c00;
            color: white;
            padding: 1rem;
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
        }

        .profile-icon {
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
            font-size: 1.5rem;
            cursor: pointer;
        }

        .table th {
            background-color: #f1f1f1;
        }

        .btn-custom {
            background-color: #ff8c00;
            color: white;
        }

        .status-approved {
            color: #28a745; /* Bootstrap Success Green */
        }

        .status-pending {
            color: #ffc107; /* Bootstrap Warning Yellow */
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <i class="bi bi-person-circle profile-icon" data-bs-toggle="modal" data-bs-target="#profileModal"></i>
    </div>

    <!-- Profil Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="profileModalLabel">Profil Ayarları</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p><strong>Kullanıcı Adı:</strong> Ayşe Yılmaz</p>
                    <p><strong>E-posta:</strong> ayse.yilmaz@example.com</p>
                    <hr>
                    <button class="btn w-100 mb-2" style="background-color: #ff8c00; color: #f8f9fa;">Ana Sayfaya Dön</button>
                    <button class="btn btn-danger w-100">Çıkış Yap</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Kitap adı, yazar veya kategori ara...">
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kitap Adı</th>
                    <th>Yazar</th>
                    <th>Rezervasyon Tarihi</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <!-- Bekliyor Durumu -->
                <tr>
                    <td>Artificial Intelligence: Ethics and Society</td>
                    <td>John Doe</td>
                    <td>15.12.2024</td>
                    <td class="status-pending">Bekliyor</td>
                    <td>
                        <button class="btn btn-custom btn-sm">Onayla</button>
                        <button class="btn btn-danger btn-sm">İptal Et</button>
                    </td>
                </tr>

                <!-- Onaylandı Durumu -->
                <tr>
                    <td>Machine Learning Basics</td>
                    <td>Jane Smith</td>
                    <td>10.12.2024</td>
                    <td class="status-approved">Onaylandı</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" disabled>Onaylandı</button>
                    </td>
                </tr>

                <tr>
                    <td>Data Science with Python</td>
                    <td>Mark Wilson</td>
                    <td>12.12.2024</td>
                    <td class="status-approved">Onaylandı</td>
                    <td>
                        <button class="btn btn-secondary btn-sm" disabled>Onaylandı</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

</body>
</html>
