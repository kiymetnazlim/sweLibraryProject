@model List<LibraryProject.DTO.ReservationDto>

@{
    ViewData["Title"] = "Reservation Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml"; // Layout dosyanızı burada belirleyebilirsiniz.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
    <style>
        .header {
            background-color: #ff8c00;
            color: white;
            padding: 1rem;
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
        }

        .table th {
            background-color: #f1f1f1;
        }

        .btn-custom {
            background-color: #ff8c00;
            color: white;
        }

        .status-approved {
            color: #28a745; /* Onaylandı Yeşil */
        }

        .status-pending {
            color: #ffc107; /* Bekliyor Sarı */
        }

        .text-primary {
            color: #007bff; /* Ödünç Verildi Mavi */
        }
    </style>
</head>
<body>



    <!-- Ana İçerik -->
    <div class="container mb-5">
        <table id="reservationsTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Kitap Adı</th>
                    <th>Rezervasyon Tarihi</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="5">Veri bulunamadı.</td>
                    </tr>
                }
                else
                {
                    @foreach (var reservation in Model)
                    {
                        <tr>
                            <td>@reservation.UserName</td>
                            <td>@reservation.BookTitle</td>
                            <td>@reservation.ReservationDate.ToString(System.Globalization.CultureInfo.InvariantCulture)</td>

                            <td class="@(reservation.ReservationStatus == "Onaylandı" ? "status-approved" :
                              reservation.ReservationStatus == "Ödünç Verildi" ? "text-primary" : "status-pending")">
                                @reservation.ReservationStatus
                            </td>
                            <td>
                                @if (reservation.ReservationStatus == "Bekliyor")
                                {

                                    <button class="btn btn-info btn-sm lend-btn" data-id="@reservation.ReservationId">Ödünç Ver</button>
                                }
                                else if (reservation.ReservationStatus == "Onaylandı")
                                {
                                    <button class="btn btn-info btn-sm lend-btn" data-id="@reservation.ReservationId">Ödünç Ver</button>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>Ödünç Verildi</button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Onayla butonuna tıklanma
            document.querySelectorAll('.approve-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const reservationId = this.getAttribute('data-id');
                    fetch(/Reservation/Approve/${reservationId}, { method: 'POST' })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Butonun durumunu değiştirme
                                const row = btn.closest('tr');
                                const statusCell = row.querySelector('td:nth-child(4)');
                                statusCell.textContent = 'Onaylandı';
                                statusCell.classList.remove('status-pending');
                                statusCell.classList.add('status-approved');

                                const approveButton = row.querySelector('.approve-btn');
                                approveButton.textContent = 'Onaylandı';
                                approveButton.disabled = true; // Onaylandı butonunu devre dışı bırak

                                const lendButton = row.querySelector('.lend-btn');
                                lendButton.style.display = 'inline-block'; // 'Ödünç Ver' butonunu göster
                            } else {
                                alert("Onaylama sırasında bir hata oluştu.");
                            }
                        });
                });
            });

            // Ödünç Ver butonuna tıklanma
            document.querySelectorAll('.lend-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const reservationId = this.getAttribute('data-id');
                    fetch(/Reservation/Lend/${reservationId}, { method: 'POST' })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Butonun durumunu değiştirme
                                const row = btn.closest('tr');
                                const statusCell = row.querySelector('td:nth-child(4)');
                                statusCell.textContent = 'Ödünç Verildi';
                                statusCell.classList.remove('status-approved');
                                statusCell.classList.add('text-primary'); // Ödünç Verildi durumu için renk değişikliği

                                const lendButton = row.querySelector('.lend-btn');
                                lendButton.textContent = 'Ödünç Verildi';
                                lendButton.disabled = true; // Ödünç Verildi butonunu devre dışı bırak
                            } else {
                                alert("Ödünç verme sırasında bir hata oluştu.");
                            }
                        });
                });
            });
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>