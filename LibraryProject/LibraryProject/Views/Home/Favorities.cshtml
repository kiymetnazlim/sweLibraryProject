@{
    ViewData["Title"] = "Favorities";
    Layout = "~/Pages/Shared/_HomeLayout.cshtml"; // Layout dosyanızı burada belirleyebilirsiniz.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favori Kitaplar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffff; /* Çok açık turuncu */
        }

        .navbar {
            background-color: #FF6F00; /* Açık turuncu */
        }

            .navbar .navbar-brand {
                font-size: 24px;
                font-weight: bold;
                color: white;
            }

            .navbar .nav-link {
                font-weight: bold;
                color: white !important;
            }

                .navbar .nav-link:hover {
                    color: #FF6F00;
                }

            .navbar .logout button {
                background-color: #FF6F00;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
            }

        /* Favori Kitaplar Sayfası Tasarımı */
        .book-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            padding: 20px;
        }

            .book-card h5 {
                color: #FF6F00;
                font-weight: bold;
            }

            .book-card p {
                font-size: 16px;
                color: #555;
            }

            .book-card .btn {
                background-color: #FF6F00;
                color: white;
                font-weight: bold;
                border-radius: 5px;
            }

                .book-card .btn:hover {
                    background-color: #FF8C1A;
                }

        .book-info {
            display: flex;
            margin-top: 20px;
        }

            .book-info .book-img {
                width: 150px;
                height: 150px;
                margin-right: 20px;
                display: flex;
                align-items: center;
                justify-content: center;
                background-color: #FFEDD5;
                border-radius: 8px;
                font-size: 80px;
                color: #888;
            }

            .book-info .book-description {
                flex: 1;
            }

        /* Kitaplar Listesi */
        .book-list {
            margin-top: 50px;
        }

        /* Rezerve Et Butonu */
        .reserve-btn {
            margin-top: 20px;
        }

        /* Kalp İkonu */
        .heart-icon {
            font-size: 24px;
            color: #ccc; /* Varsayılan gri renk */
            cursor: pointer;
        }

            .heart-icon.favorited {
                color: #FF6F00; /* Favori olduğunda turuncu */
            }

    </style>
</head>


