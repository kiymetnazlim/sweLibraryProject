                            <!-- Kitap Detayı Butonu -->
                            <a href="kitap-detay.html" class="btn">Kitap Detayı</a>
                        </div>
                    </div>
                    <!-- Favori Kalp İkonu -->
                    <i class="fas fa-heart heart-icon" onclick="toggleFavorite(this)"></i>
                </div>
            </div>

