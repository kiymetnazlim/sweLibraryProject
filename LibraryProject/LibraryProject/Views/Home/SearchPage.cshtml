<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ana Sayfa</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #FFEDD5; /* Çok açık turuncu */
        }

        .navbar {
            background-color: #FF6F00; /* Açık turuncu */
        }

        .navbar .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            color: white; /* Logo beyaz olacak */
        }

        .navbar .nav-link {
            font-weight: bold; /* Yazıları kalın yap */
            color: white !important; /* Yazı rengi beyaz */
        }

        .navbar .nav-link:hover {
            color: #FF6F00; /* Hover rengi turuncu */
        }

        .navbar .logout button {
            background-color: #FF6F00; /* Turuncu buton */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

        .navbar .logout button:hover {
            background-color: #FF8C1A; /* Hover rengi turuncu */
        }

        /* DataTable Stil */
        .dataTables_wrapper {
            margin-top: 50px;
        }

        table.dataTable {
            margin-top: 30px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table.dataTable thead {
            margin-top: 20px;
            background-color: #b4b1ae;
            color: white;
        }

        table.dataTable td, table.dataTable th {
            padding: 15px;
        }

        table.dataTable tbody tr:hover {
            background-color: #FFEDD5;
        }
        .search-container {
            margin-top: 100px; /* Navbar'ın altına yerleşmesi için */
            margin-bottom: 30px; /* DataTable ile arasında boşluk */
        }

        .icon-size {
            width: 40px; /* İstediğiniz boyutu buradan ayarlayabilirsiniz */
            height: 40px;
        }

    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <!-- Logo Resmi -->
            <a class="navbar-brand" href="#">
                <img src="https://cdn-icons-png.flaticon.com/512/5823/5823722.png" class="icon-size" alt="Logo">
            </a>

            <!-- Navbar Links -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Favoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ödeme Geçmişi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profil</a>
                    </li>
                    
                </ul>

                <div class="logout">
                    <button><i class="fas fa-sign-out-alt"></i> Çıkış Yap</button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Kitaplar DataTable -->
    <div class="container">


        <table id="booksTable" class="display">
            <thead>
                <tr>
                    <th>Kitap Adı</th>
                    <th>Yazar</th>
                    <th>Yayın Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1984</td>
                    <td>George Orwell</td>
                    <td>1949</td>
                    <td><button class="btn btn-secondary">Detay</button></td>
                </tr>
                <tr>
                    <td>Suç ve Ceza</td>
                    <td>Fyodor Dostoyevski</td>
                    <td>1866</td>
                    <td><button class="btn btn-secondary">Detay</button></td>
                </tr>
                <tr>
                    <td>Harry Potter ve Felsefe Taşı</td>
                    <td>J.K. Rowling</td>
                    <td>1997</td>
                    <td><button class="btn btn-secondary">Detay</button></td>
                </tr>
                <tr>
                    <td>To Kill a Mockingbird</td>
                    <td>Harper Lee</td>
                    <td>1960</td>
                    <td><button class="btn btn-secondary">Detay</button></td>
                </tr>
                <tr>
                    <td>Brave New World</td>
                    <td>Aldous Huxley</td>
                    <td>1932</td>
                    <td><button class="btn btn-secondary">Detay</button></td>
                </tr>
                <tr>
                    <td>Fahrenheit 451</td>
                    <td>Ray Bradbury</td>
                    <td>1953</td>
                    <td><button class="btn btn-secondary">Detay</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS, jQuery, Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function() {
            // DataTable'ı başlatıyoruz
            $('#booksTable').DataTable();
        });
    </script>
</body>
</html>
